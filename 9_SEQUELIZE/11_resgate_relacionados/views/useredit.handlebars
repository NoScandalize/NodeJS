<h1>Editando: {{user.name}}</h1>
<form action="/users/update" class="form" method="POST">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" id="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
    </div>
        <div class="form-control">
        <label for="ocupation">Profissão:</label>
        <input type="text" name="ocupation" id="ocupation" placeholder="Digite a profissão" value="{{user.ocupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" id="newsletter" checked>
        {{else}}
            <input type="checkbox" name="newsletter" id="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite a rua">
        </div>
        <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o número da residência">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite a cidade">
        </div>
        <input type="submit" value="Incluir endereço">
    </form>
    <div class="address-list">
        <h2>Lista de endereços:</h2>
        {{#each user.Addresses}}
        <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
        {{/each}}
    </div>
</div>